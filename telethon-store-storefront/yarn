#!/bin/bash
# Yarn wrapper that redirects to npm
echo "WARNING: Yarn detected, redirecting to npm..."

# Map yarn commands to npm equivalents
case "$1" in
  "install"|"")
    exec npm install "${@:2}"
    ;;
  "start")
    exec npm start "${@:2}"
    ;;
  "build")
    exec npm run build "${@:2}"
    ;;
  "dev")
    exec npm run dev "${@:2}"
    ;;
  "run")
    exec npm run "${@:2}"
    ;;
  *)
    echo "Unsupported yarn command: $1"
    echo "Available commands: install, start, build, dev, run"
    exit 1
    ;;
esac
